{
  "name": "ecommerce-order-product-service",
  "version": "1.0.0",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env dist/app/server.js",
    "build": "npx tsc",
    "type-check": "npx tsc --noEmit",
    "dev": "npx tsx watch --env-file=.env --clear-screen=false src/app/server.ts",
    "prisma:generate": "node --env-file=.env ./node_modules/prisma/build/index.js generate --schema=./src/shared/infrastructure/db/prisma/schema.prisma",
    "prisma:migrate:dev": "node --env-file=.env ./node_modules/prisma/build/index.js migrate dev --schema=./src/shared/infrastructure/db/prisma/schema.prisma",
    "prisma:migrate:prod": "node --env-file=.env ./node_modules/prisma/build/index.js migrate deploy --schema=./src/shared/infrastructure/db/prisma/schema.prisma",
    "prisma:db:push": "node --env-file=.env ./node_modules/prisma/build/index.js db push --schema=./src/shared/infrastructure/db/prisma/schema.prisma",
    "prisma:migrate:reset": "node --env-file=.env ./node_modules/prisma/build/index.js migrate reset --force --schema=./src/shared/infrastructure/db/prisma/schema.prisma",
    "test": "jest --config=__tests__/setup/jest.config.cjs",
    "test:watch": "jest --config=__tests__/setup/jest.config.cjs --selectProjects unit,e2e,integration --watchAll --verbose --runInBand",
    "test:coverage": "jest --verbose  --config=__tests__/setup/jest.config.cjs --coverage",
    "test:unit": "jest --verbose --config=__tests__/setup/jest.config.cjs --selectProjects unit",
    "test:integration": "jest --config=__tests__/setup/jest.config.cjs --selectProjects integration",
    "test:e2e:prepare": "node scripts/prepare-test-db.js",
    "test:e2e": "npm run test:e2e:prepare && cross-env NODE_ENV=test jest --verbose --config=__tests__/setup/jest.config.cjs --selectProjects e2e --runInBand",
    "test:e2e:run": "cross-env NODE_ENV=test jest --verbose --config=__tests__/setup/jest.config.cjs --selectProjects e2e --runInBand",
    "test:e2e:docker": "node scripts/test-e2e.cjs",
    "test:e2e:fresh": "npm run test:e2e:stop && npm run test:e2e:docker",
    "test:e2e:stop": "docker stop postgres-test && docker rm postgres-test"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "amqplib": "^0.10.9",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "newrelic": "^13.4.0",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/newrelic": "^9.14.8",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.1",
    "@types/winston": "^2.4.4",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.4",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
